<style>
	.nft-card__overlay {
		display: none;
		opacity: 0;
		position: absolute;
		top: 0;
		left: 0;
		background: rgba(0, 0, 0, 0.8);
		width: 100%;
		height: 100%;
		cursor: pointer;
		z-index: 1;
	}

	.nft-card {
		border-radius: 1.5rem;
		box-shadow: 0 2.5rem 5rem 0 rgba(0, 0, 0, 0.1);
		background: var(--very-dark-blue-card-bg);
		padding: 2.4rem;
		width: 100%;
		max-width: 32.7rem;
		margin-left: 2.4rem;
		margin-right: 2.4rem;
		position: relative;

		@media (width >= 768px) {
			max-width: 35rem;
			padding: 2.4rem 2.4rem 3.2rem 2.4rem;
		}
	}

	.nft-card__image-wrapper {
		border-radius: 0.8rem;
		text-decoration: none;
		overflow: hidden;
		position: relative;
		display: block;
		border: none;
		cursor: pointer;
		z-index: 2;
	}

	.nft-card__image {
		border-radius: 0.8rem;
		width: 27.8rem;
		height: 27.8rem;
		object-fit: cover;

		@media (width >= 768px) {
			width: 30.2rem;
			height: 30.2rem;
		}
	}

	.nft-card__image-background {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		display: flex;
		align-items: center;
		justify-content: center;
		background: rgba(0, 255, 248, 0.5);
		z-index: 1;
		border-radius: 0.8rem;
		opacity: 0;
	}

	.nft-card__image-background-icon {
		position: relative;
	}

	.nft-card__content {
		margin-top: 2.4rem;
		margin-bottom: 1.6rem;
		display: flex;
		flex-direction: column;

		@media (width >= 768px) {
			margin-bottom: 2.4rem;
		}
	}

	.nft-card__title-wrapper {
		text-decoration: none;
	}

	.nft-card__title {
		font-family: var(--font-family), sans-serif;
		font-weight: 600;
		font-size: 2.2rem;
		color: var(--white);
		text-align: left;
	}

	.nft-card__description {
		font-family: var(--font-family), sans-serif;
		font-weight: 300;
		font-size: 1.8rem;
		line-height: 144%;
		color: var(--soft-blue);
		margin-top: 1.2rem;
		margin-bottom: 2.4rem;
		text-align: left;

		@media (width >= 768px) {
			margin-top: 1.6rem;
		}
	}

	.nft-card__additional-information {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: space-between;
	}

	.nft-card__price-wrapper {
		display: flex;
		flex-direction: row;
		align-items: center;
		column-gap: 0.7rem;
	}

	.nft-card__price {
		font-family: var(--font-family), sans-serif;
		font-weight: 600;
		font-size: 1.5rem;
		color: var(--cyan);
		text-transform: uppercase;

		@media (width >= 768px) {
			font-size: 1.6rem;
		}
	}


<script>
	import gsap from "gsap";

	let isImagePreviewActive = false;

	const nftCardLinks = document.querySelectorAll("[data-nft-card-link]");
	const nftCardImageLink = document.querySelector("[data-nft-card-image-link]");
	const nftCardImageBackground = document.querySelector("[data-nft-card-image-background]");
	const nftCardImageIcon = document.querySelector("[data-nft-card-image-icon]");
	const nftCardOverlay = document.querySelector("[data-nft-card-overlay]");

	nftCardLinks.forEach(link => {
		link.addEventListener("mouseup", (event:Event) => handleLinkMouseUp(event));
		link.addEventListener("mousedown", (event:Event) => handleLinkMouseDown(event));
		link.addEventListener("mouseenter", (event:Event) => handleLinkMouseEnter(event));
		link.addEventListener("mouseleave", (event:Event) => handleLinkMouseLeave(event));
		link.addEventListener("touchstart", (event:Event) => handleLinkTouchStart(event));
		link.addEventListener("touchend", (event:Event) => handleLinkTouchEnd(event));
	})

	nftCardImageLink!.addEventListener("click", () => handleImageClick());
	nftCardImageLink!.addEventListener("mouseenter", () => handleImageMouseEnter());
	nftCardImageLink!.addEventListener("mouseleave", () => handleImageMouseLeave());
	nftCardImageLink!.addEventListener("touchstart", () => handleImageTouchStart());
	nftCardImageLink!.addEventListener("touchend", () => handleImageTouchEnd());

	nftCardOverlay!.addEventListener("click", () => handleOverlayClick());

	const handleLinkMouseUp = (event: Event) => {
		gsap.to(event.target, {
			scale: 1,
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleLinkMouseDown = (event: Event) => {
		gsap.to(event.target, {
			scale: 0.95,
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleLinkMouseEnter  = (event: Event) => {
		gsap.to(event.target, {
			scale: 1,
			color: "#00fff8",
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleLinkMouseLeave  = (event: Event) => {
		gsap.to(event.target, {
			scale: 1,
			color: "#fff",
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleLinkTouchStart = (event: Event) => {
		gsap.to(event.target, {
			scale: 0.95,
			color: "#00fff8",
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleLinkTouchEnd = (event: Event) => {
		gsap.to(event.target, {
			scale: 1,
			color: "#fff",
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleImageClick = () => {
		if (isImagePreviewActive) return;

		isImagePreviewActive = true;

		gsap.set(nftCardOverlay, {
			display: "block",
		});

		gsap.to(nftCardOverlay, {
			opacity: 1,
			duration: 0.25,
			ease: "power1"
		});

		gsap.to(nftCardImageLink, {
			scale: 1.6,
			translateY: "40%",
			duration: 0.25,
			cursor: "default",
			ease: "power1",
		});

		gsap.to(nftCardImageIcon, {
			opacity: 0,
			scale: 0.8,
			filter: "blur(4px)",
			duration: 0.25,
			ease: "power1"
		});

		gsap.to(nftCardImageBackground, {
			opacity:  0,
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleOverlayClick = () => {
		gsap.to(nftCardOverlay, {
			opacity: 0,
			duration: 0.25,
			display: "none",
			ease: "power1",
		})

		gsap.to(nftCardImageLink, {
			scale: 1,
			translateY: 0,
			duration: 0.25,
			ease: "power1",
			onComplete: () => {
				gsap.to(nftCardImageLink, {
					cursor: "pointer",
				});
				isImagePreviewActive = false;
			}
		});
	}

	const handleImageMouseEnter  = () => {
		if (isImagePreviewActive) return;

		gsap.set(nftCardImageIcon, {
			opacity: 0,
			scale: 0.8,
			filter: "blur(4px)",
		});

		gsap.to(nftCardImageIcon, {
			opacity:  1,
			scale: 1,
			filter: "blur(0px)",
			duration: 0.25,
			ease: "power1"
		});

		gsap.to(nftCardImageBackground, {
			opacity:  1,
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleImageMouseLeave  = () => {
		if (isImagePreviewActive) return;

		gsap.to(nftCardImageIcon, {
			opacity: 0,
			scale: 0.8,
			filter: "blur(4px)",
			duration: 0.25,
			ease: "power1"
		});

		gsap.to(nftCardImageBackground, {
			opacity:  0,
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleImageTouchStart = () => {
		if (isImagePreviewActive) return;

		gsap.set(nftCardImageIcon, {
			opacity: 0,
			scale: 0.8,
			filter: "blur(4px)",
		})

		gsap.to(nftCardImageBackground, {
			opacity:  1,
			duration: 0.25,
			ease: "power1"
		});

		gsap.to(nftCardImageIcon, {
			opacity: 1,
			scale: 1,
			filter: "blur(0px)",
			duration: 0.25,
			ease: "power1"
		});
	};

	const handleImageTouchEnd = () => {
		if (isImagePreviewActive) return;

		gsap.to(nftCardImageIcon, {
			opacity: 0,
			scale: 0.8,
			filter: "blur(4px)",
			duration: 0.25,
			ease: "power1"
		});

		gsap.to(nftCardImageBackground, {
			opacity: 0,
			duration: 0.25,
			ease: "power1"
		});
	};
</script>


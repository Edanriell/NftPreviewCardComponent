		font-family: var(--font-family), sans-serif;
		font-weight: 400;
		font-size: 1.5rem;
		color: var(--soft-blue);

		@media (width >= 768px) {
			font-size: 1.6rem;
		}
	}

	.nft-card__creator-wrapper {
		border-top: 0.1rem solid var(--very-dark-blue-line);
		padding-top: 1.6rem;
		display: flex;
		flex-direction: row;
		align-items: center;
		column-gap: 1.6rem;
	}

